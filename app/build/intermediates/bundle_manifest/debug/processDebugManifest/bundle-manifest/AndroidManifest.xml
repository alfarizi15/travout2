<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azhar.travel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/nature"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nature"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.aldi.travel.activity.splashscreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aldi.travel.activity.MainActivity" />
        <activity
            android:name="com.aldi.travel.activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.aldi.travel.activity.RegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.aldi.travel.activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aldi.travel.activity.HistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aldi.travel.activity.BookKeretaActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.aldi.travel.activity.coffe_main" />
        <activity android:name="com.aldi.travel.activity.News" />
        <activity android:name="com.aldi.travel.activity.Kamar" />
    </application>

</manifest>