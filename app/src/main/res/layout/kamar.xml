<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbKrl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/purplewave"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <ScrollView
        android:paddingTop="10dp"
        android:id="@+id/scrol1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/tbKrl">
    <LinearLayout
        android:id="@+id/layer1"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/kmr1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/kamar1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capsule Hostel Batavia"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/kmr2"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mk House Tenden"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/kmr3"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Packer Lodge"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/kmr4"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kini Capsul"
            android:textAlignment="center"/>
    </LinearLayout>
    </ScrollView>
    /////line2
    <ScrollView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/scrol1"
        android:layout_below="@id/tbKrl"
        >
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_below="@id/tbKrl"
        android:orientation="vertical"
        android:layout_toRightOf="@id/layer1"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/kmr5"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/kamar5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redoorz Paskal Hyper"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/kmr6"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar6"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great Eve House"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/kmr7"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar7"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitra Dago"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/kmr8"

            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kamar8"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitra Mutiara"
            android:textAlignment="center"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>