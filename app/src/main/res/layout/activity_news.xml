<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbKrl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/purplewave"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <TextView
        android:id="@+id/titleq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik Gambar info lengkap"
        android:gravity="center"
        android:layout_below="@id/tbKrl"

        ></TextView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_below="@id/titleq"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="150dp"

        android:background="@drawable/berita1"
         />
    <TextView
        android:id="@+id/text1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
       android:text="Demo Anies, Begini Keluhan Pekerja Karaoke yang Terpaksa Nganggur,  Selasa, 21 Jul 2020"
        android:textAlignment="textEnd"
        android:layout_toRightOf="@id/button1"
        />
        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/button1"
            android:layout_marginTop="20dp"
            android:background="@drawable/berita2"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Tidur di Kamarnya, Bocah Bandung Barat Tewas Terpanggang, Senin, 20 Jul 2020"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            android:layout_below="@id/button1"
            android:layout_toRightOf="@id/button2"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/button2"
            android:layout_marginTop="20dp"
            android:background="@drawable/berita3" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/text3"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Ini Analisis BMKG soal Gempa M 5,1 yang Guncang Bantul, selasa ,21 jul 2020"
            android:textAlignment="textEnd"
            android:layout_below="@id/button2"
            android:layout_toRightOf="@id/button3"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/button3"
            android:layout_marginTop="20dp"
            android:background="@drawable/berita4"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="175dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Ngaku Petinggi AAU, Napi Ini Tipu Korban Puluhan Juta,  Senin, 20 Jul 2020"
            android:textAlignment="textEnd"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button4"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/button4"
            android:layout_marginTop="20dp"
            android:background="@drawable/berita5" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="175dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Terdampak Proyek RS, Warga di Surabaya Demo Tuntut Kompensasi Rp 50 juta,  Selasa, 21 Jul 2020"
            android:textAlignment="textEnd"
            android:layout_below="@id/button4"
            android:layout_toRightOf="@id/button5"
            />



    </RelativeLayout>
</ScrollView>
</RelativeLayout>