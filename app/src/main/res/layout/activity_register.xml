<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        app:cardCornerRadius="15dp"

        app:strokeColor="@color/black"
        app:strokeWidth="5dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"


            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:strokeColor="@color/tp2"
                app:strokeWidth="5dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/white">

                <EditText
                    android:id="@+id/reg_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_person"
                    android:hint="     Masukkan Nama"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/tp2"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLoginUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:textColorHint="@color/white">

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_email"
                    android:hint="     Masukkan Email"
                    android:textColor="@color/white"
                    android:imeOptions="actionNext"
                    android:background="@color/tp2"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLoginPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:textColorHint="@color/white"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="     Password"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@color/tp2"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/daftar"
                android:layout_width="250dp"
                android:layout_height="60dp"

                android:layout_gravity="bottom|center"
                android:layout_marginBottom="100dp"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="50dp" />



        <Button
            android:id="@+id/ke_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="@string/after_register"
            android:textAllCaps="false"
            android:textColor="#92A7AB"
            android:textSize="12sp"
            app:cornerRadius="50dp" />

    </com.google.android.material.card.MaterialCardView>







</RelativeLayout>